@model LoginViewModel
<head>
    <link href=@Url.Content("~/Styles/app.css") rel="stylesheet" type="text/css"/>
</head>
<div class="panel">
    <form asp-controller="Auth" asp-action="Login" method="post">
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="header">Вход</div>
        <div class="block">
            <label>Логин</label>
            <input asp-for="Username" class="input" />
            <span asp-validation-for="Username"></span>
        </div>
        <div class="block">
            <label>Пароль</label>
            <input asp-for="Password" class="input" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="block">
            <button type="submit" class="button">Войти</button>
        </div>
        <a asp-controller="Auth" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" class="switch-button">Регистрация</a>
    </form>
</div>